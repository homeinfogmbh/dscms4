            targetNamespace="http://xml.homeinfo.de/schema/presentation">
    <xs:complexType name="Attachment">
        <xs:annotation>
            <xs:documentation xml:lang="de">
                Ein Dateianhang.
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="mimetype" type="xs:string">
                <xs:annotation>
                    <xs:documentation xml:lang="de">
                        MIME Typ.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="filename" type="xs:string">
                <xs:annotation>
                    <xs:documentation xml:lang="de">
                        Dateiname.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="sha256sum" type="xs:string">
            <xs:annotation>
                <xs:documentation xml:lang="de">
                    SHA-256 Pr√ºfsumme.
                </xs:documentation>
            </xs:annotation>
