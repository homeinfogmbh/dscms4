<xs:schema  xmlns="http://xml.homeinfo.de/schema/dscms4"
            xmlns:xs="http://www.w3.org/2001/XMLSchema" version="1.0"
            targetNamespace="http://xml.homeinfo.de/schema/dscms4">
    <xs:complexType name="Attachment">
        <xs:annotation>
            <xs:documentation xml:lang="de">
                Ein Dateianhang.
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="mimetype" type="xs:string">
                <xs:annotation>
                    <xs:documentation xml:lang="de">
                        MIME Typ.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="filename" type="xs:string">
                <xs:annotation>
                    <xs:documentation xml:lang="de">
                        Dateiname.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="id" type="xs:positiveInteger" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="de">
                    Datei-ID des hisfs.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="sha256sum" type="xs:string">
            <xs:annotation>
                <xs:documentation xml:lang="de">
                    SHA-256 Pr√ºfsumme.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="format" type="xs:string">
            <xs:annotation>
                <xs:documentation xml:lang="de">
                    Darstellungsformat.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="index" type="xs:integer">
            <xs:annotation>
                <xs:documentation xml:lang="de">
                    Sortierungs Index.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>
</xs:schema>
